




#include<stdio.h>
#include<conio.h>
main() 
{

       int number[100],i,size,sum=0;

printf("\n Enter the size of an array:");
scanf("%d",&size);

      for(i=0;i<size;i++)
      {
          printf("Enter the number:");
          scanf ("%d",&number[i]);
      }

printf("\nThe number are::");      
       for(i=0;i<size;i++)
       {
           sum=sum+number[i];
           printf("\n %d",sum);
       }

getch();

}

Output :
