


#include<stdio.h>
#include<conio.h>
 main()
{
       int a[100],i,n,b=0,flag,position=0;
 
  printf("enter the size of array ");
  scanf("%d",&n);
  printf("enter the elements of array :\n");
  for(i=0;i<n;i++)
  {
    scanf("%d",&a[i]);
  }

 for (i=0;i<n;i++)
{  
  printf("\n the numbers are %d",a[i]);
}

printf("\n find number ");
scanf("%d",&b);

  for (i=0;i<n;i++)
   { if(b==a[i])
     { flag=1;
       position=i;
     }
   }
     if (flag==1)
     printf("\n number found at %dth position",position + 1);

     else
     printf("\n not found ");


}

