

#include<stdio.h>
#include<conio.h>
main()
{
   int a[100],x,i,n,max,min;
   
   printf("enter the size of an array :");
   scanf("%d",&n);

   printf("enter the array elements :\n");
   for ( i = 0; i < n; i++)
   {
       scanf("%d",&a[i]);
   }
   
   printf("your array elements are :\n");
   for ( i = 0; i < n; i++)
   {
       printf("  %d",a[i]);
   }
   
  printf("\nfor min max");

  max=a[0];
  min=a[0];

 for ( i = 0; i < n; i++)
   {
       if (a[i]>max)
       {
           max=a[i];
       }
       
       if (a[i]<min)
       {
           min=a[i];
       }
       
   }
   
  printf("\nlargest number of your array is %d",max);
  printf("\nsmallest number of your array is %d",min);


}

