
1/! 1 + 2/! 2 + 3/! 3 + ……  



#include<stdio.h>
#include<conio.h>
#include<math.h>
 main()
 {

   float i,a,n,b,fact=1,sum=0;

   printf("enter the value of n :\n");
   scanf(" %f",&n);
   
   for(i=1;i<=n;i++)
   {
   fact*=i;
   a=i/fact;
   printf(" \n%f",a);
   sum=sum+a;

   }
   printf("\nyr value is %f",sum);


 }

