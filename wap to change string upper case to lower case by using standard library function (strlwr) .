

#include<stdio.h>
#include<conio.h>
#include<string.h>
void main()

{
   char a[20];
   printf("enter your string in upper case :\n");
   gets(a);
   printf("your string is :");
   puts(a);
   
   strlwr(a);
   printf("string in lower case %s",a);

}

output :

