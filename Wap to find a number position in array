


#include<stdio.h>
#include<conio.h>
main()
{
            int a[100],i,n,number ,c;

 printf("enter the size of an array ");
 scanf("%d",&n);

       for(i=0;i<n;i++)
      { 
              printf("enter the number : ");
              scanf("%d",&a[i]);
      }

      for(i=0;i<n;i++)
      {
              printf("\nvalue of array is %d",a[i]);
      }

  printf("\nfind no.");
  scanf("%d",&number );
  
       for(i=0;i<n;i++)
       {

               if(a[i]==number)

                   { 
                     printf("\n%d no. is found at %dposition",number,i+1);
                     break;
                   }   

       }
       
                 if(a[i]!=number)
                 printf("\nno. not found ");

  getch ();

}

