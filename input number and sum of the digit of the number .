

#include<stdio.h>
#include<conio.h>
 main ()
{
   int rem,rn=0,n,sum=0;
   
   printf("enter the number ");
   scanf("%d",&n);
   while (n!=0)
    {
    rem=n%10;
    rn = rn*10+rem;
    n=n/10;
    sum=sum+rem;
    }
   printf("the reverse of the number is %d", sum);

   

}

output :
enter the number 4567
the reverse of the number is 22
